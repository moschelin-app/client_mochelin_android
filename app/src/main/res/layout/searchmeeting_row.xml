<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


<androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모임"
                        android:textAlignment="center"
                        android:textColor="#050505"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/SMphoto"
                        app:srcCompat="@drawable/baseline_image_24"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/corner"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSMtoreName"
                            tools:ignore="TextSizeCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bubble"
                            android:padding="1dp"
                            android:text="상호명"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSMContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="여기에 모임 이름이 적힐겁니다. 사랑합니다 원준님^^"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtSMeetingDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="내일(토) 13:00"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile1"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile4"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile5"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile6"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgSMProfile7"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/imageView2"
                            app:srcCompat="@drawable/baseline_people_outline_24"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/txtSMeetCount"
                            tools:ignore="TextSizeCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="7 / 8"
                            android:textSize="12dp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtCloser4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="자세히보기" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>