<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/storePhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/corner"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/baseline_image_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        app:srcCompat="@drawable/review_marker" />

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="거리"
                        android:textColor="#020202"
                        android:textSize="15sp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/bubble"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:text="상호명"
                    android:textColor="#CC000000"
                    android:textSize="12sp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="여기에 모임 이름이 적힐겁니다. 사랑합니다 원준님^^"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtStoreAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:maxLines="1"
                        android:paddingRight="14dp"
                        android:text="인천 서구 연희동" />

                    <TextView
                        android:id="@+id/txtMeetingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내일(토) 13:00"
                        android:textSize="13sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/imgProfile1"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile3"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/imgProfile2"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile4"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/imgProfile3"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile5"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/imgProfile4"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile6"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_toRightOf="@id/imgProfile5"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile7"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/imgProfile6"
                        android:src="@drawable/baseline_account_circle_24"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/txtMeetCount"
                        app:srcCompat="@drawable/baseline_people_outline_24" />

                    <TextView
                        android:id="@+id/txtMeetCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="7 / 8"
                        android:textSize="13sp"
                        tools:ignore="TextSizeCheck" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>